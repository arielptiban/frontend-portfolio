---
import projects from "@/collections/projects.json";
import Card from "./ui/Card.astro";
---

<section id="projects" class="py-32 bg-[#0d0d0d]">
    <div class="container mx-auto px-8 max-w-7xl">
        <div class="text-center mb-20">
            <h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">
                Mis Proyectos
            </h2>
            <p class="text-xl text-white/60 max-w-2xl mx-auto font-light">
                Una colección de trabajos que demuestran mi enfoque en diseño y
                desarrollo frontend
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                projects.map((project) => (
                    <Card
                        title={project.title}
                        description={project.description}
                        stack={project.stack}
                        image={project.image}
                        github={project.github}
                        live={project.live}
                    />
                ))
            }
        </div>
    </div>
</section>

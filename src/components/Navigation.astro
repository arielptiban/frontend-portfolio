<nav
    class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-transparent py-8"
>
    <div
        class="container mx-auto px-8 flex justify-between items-center max-w-7xl"
    >
        <a
            href="#home"
            class="text-xl font-semibold text-white hover:text-white/80 transition-colors duration-300"
        >
